<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".login.RegisterMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/roboto"
                android:text="Let's set up your account!"
                android:textColor="@color/main_theme"
                android:textSize="36sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/registration_fname"
                    android:layout_width="155dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/et_bg"
                    android:ems="10"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="First name"
                    android:inputType="textPersonName|textCapSentences"
                    android:maxWidth="350dp"
                    android:padding="12dp"
                    android:paddingStart="16dp"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/texthint"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/registration_lastName"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/et_bg"
                    android:ems="10"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Last name"
                    android:inputType="textPersonName|textCapSentences"
                    android:maxWidth="350dp"
                    android:padding="12dp"
                    android:paddingStart="16dp"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/texthint"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/registration_fname" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/Registration_et_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/et_bg"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:hint="School Email"
                android:inputType="textEmailAddress"
                android:maxWidth="350dp"
                android:padding="12dp"
                android:paddingStart="16dp"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/texthint"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/register_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/et_bg"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxWidth="350dp"
                android:padding="12dp"
                android:paddingStart="16dp"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/texthint"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/register_confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/et_bg"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:maxWidth="350dp"
                android:padding="12dp"
                android:paddingStart="16dp"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/texthint"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/register_nextBtn1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="right"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="42dp"
                android:background="@android:color/white"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow_forward_main_24dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>